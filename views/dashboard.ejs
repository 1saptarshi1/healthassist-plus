    <div class="container">
        <h2 style="color: #008b8b; margin-bottom: 30px;">Welcome, <%= user.name %>! ğŸ‘‹</h2>

        <div class="dashboard-grid">
            <div class="card">
                <h3>ğŸ‘¤ Your Profile</h3>
                <div class="card-info">
                    <strong>Name:</strong> <%= user.name %>
                </div>
                <div class="card-info">
                    <strong>Email:</strong> <%= user.email %>
                </div>
                <div class="card-info">
                    <strong>Phone:</strong> <%= user.phone %>
                </div>
                <div class="card-info">
                    <strong>Emergency Contact:</strong> <%= user.emergencyContact %>
                </div>
            </div>

            <div class="card">
                <h3>ğŸ“Š Quick Stats</h3>
                <div class="card-info">
                    <strong>Total Reminders:</strong> <%= reminders.length %>
                </div>
                <div class="card-info">
                    <strong>Status:</strong> <span style="color: #27ae60; font-weight: bold;">âœ… Active</span>
                </div>
                <div style="margin-top: 1rem;">
                    <a href="/medicine-reminders" class="btn btn-primary">View All Reminders</a>
                </div>
            </div>

            <div class="card">
                <h3>âš¡ Quick Actions</h3>
                <div style="display: flex; flex-direction: column; gap: 0.8rem;">
                    <a href="/symptom-checker" class="btn btn-primary" style="text-decoration: none; text-align: center;">Check Symptoms</a>
                    <a href="/medicine-reminders" class="btn btn-primary" style="text-decoration: none; text-align: center;">Add Medicine</a>
                    <a href="/emergency" class="btn btn-primary" style="background-color: #e74c3c; text-decoration: none; text-align: center;">Emergency Alert</a>
                </div>
            </div>
        </div>

        <% if (reminders && reminders.length > 0) { %>
            <div class="card">
                <h3>ğŸ’Š Active Reminders</h3>
                <div class="med-list">
                    <% reminders.slice(0, 5).forEach(reminder => { %>
                        <div class="med-item">
                            <div>
                                <div class="med-name">ğŸ’Š <%= reminder.medicineName %></div>
                                <div class="med-time">
                                    <strong>Dosage:</strong> <%= reminder.dosage %> | 
                                    <strong>Time:</strong> <%= reminder.time %>
                                    <% if (reminder.description) { %>
                                        | <strong>Notes:</strong> <%= reminder.description %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>

        <div class="tips-box">
            <h4>ğŸ’¡ Health Tips</h4>
